<html>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <body>   
        <div class="container">
            <h2>A mimic faceted search</h2>
            <div class="col col-md-4">
                <h4>Search Bar</h4>
                <ul>
                    {% for k, v in facet %}
                        <li><h5><strong>{{k|capitalize}}</strong></h5></li>
                        <ul class="list-group">
                            {% for vv in v %}
                                <li class="list-group-item"><span class="badge">{{vv.count}}</span><a href="/demo2/facet/{{k}}/{{vv.key}}">{{vv.key}}</a></li>
                                    {%endfor%}
                        </ul>
                    {%endfor%}
                </ul>
            </div>
            <div class="col col-md-8">
                <h4>Results:</h4>
                <table class="table table-striped table-hover table-condensed">
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Page</th>
                    </tr>
                    {% set index=1 %}
                    {% for book in data %}
                        {% set index=index+1 %}
                        {% if index <= 20 %}
                            <tr>
                                <td>{{book.title}}</td>
                                <td>{{book.author}}</td>
                                <td>{{book.price}}</td>
                                <td>{{book.page}}</td>
                            </tr>
                        {% endif %}                    
                    {% endfor %}
                </table>

            </div>
        </div>
    </body>
</body>
</html>

